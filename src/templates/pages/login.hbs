<header class="header" role="header">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 text-center">
				<a href=""><img src="assets/img/logo.png" class="logo img-responsive"></a>
			</div>
		</div>
	</div>
</header>


<main class="main" role="main">
	<div class="container m-t-30">
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
				<div class="account-wall">
					<img class="profile-img" src="assets/img/user.svg" alt="">
					<form class="form-signin">
						<div class="alert alert-danger" role="alert"><i class="fa fa-exclamation-circle" aria-hidden="true"></i> Some text goes here</div>
